<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aau.sw7.exhib"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <!-- General permissions -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission is used for caching -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Near field communications permissions -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>

        </activity>
        <activity
            android:name=".TabActivity"
            android:parentActivityName="aau.sw7.exhib.MainActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".FeedItemActivity"
            android:parentActivityName="aau.sw7.exhib.TabActivity"
            android:theme="@style/AppDialogTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CategoriesActivity"
            android:parentActivityName="aau.sw7.exhib.MainActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".BoothActivity"
            android:parentActivityName="aau.sw7.exhib.TabActivity"
            android:theme="@style/AppDialogTheme"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
